            "minecraft:movement.basic": {
                "max_turn": 35
            },
            "minecraft:is_charged": {
                
            },

            "minecraft:behavior.charge_held_item": {
                "priority": 3,
                "items": [
                    "minecraft:arrow"
                ]
            },
            "minecraft:loot": {
                "table": "loot_tables/entities/zombierange.json"
            },
            

            "minecraft:follow_range": {
                "value": 64
            },

            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? Math.Random(3,5) : 0"
            }
            ,
            "minecraft:on_hurt": {
                "event": "udaw:retaliate",
                "target": "self"
            }
        },
        

        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "minecraft:ranged_attack"
                    ]
                }
            },
            "udaw:retaliate": {
                "add": {
                    "component_groups": [
                        "udaw:retaliation_melee",
                        "udaw:start_retaliation_timer"
                    ]
                }
            },
            "udaw:stop_retaliation": {
                "remove": {
                    "component_groups": [
                        "udaw:retaliation_melee",
                        "udaw:start_retaliation_timer"
                    ]
                }
            }
        }
    }
}
