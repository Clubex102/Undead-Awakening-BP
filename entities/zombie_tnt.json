{
    "format_version": "1.20.80",
    "minecraft:entity": {
        "description": {
            "identifier": "udaw:zombietnt",
            "is_spawnable": true,
            "is_summonable": true,
            "spawn_category": "monster"
        },
        "component_groups": {
            "udaw:start_fuse": {
                "minecraft:timer": {
                    "time": 1.5,
                    "time_down_event": {
                        "event": "udaw:explode",
                        "target": "self"
                    }
                },
                "minecraft:is_baby": {}
            },
            "udaw:exploding": {
                "minecraft:explode": {
                    "fuse_length": 0,
                    "fuse_lit": true,
                    "power": 4,
                    "causes_fire": false,
                    "breaks_blocks": true
                }
            }
        },

        "components": {
            "minecraft:health": { "value": 20, "max": 20 },
            "minecraft:movement.basic": {
            },
            "minecraft:movement": { "value": 0.3 },
            "minecraft:jump.static": { "jump_power": 0.42 },
            "minecraft:physics": { "has_collision": true, "has_gravity": true },
            "minecraft:collision_box": { "width": 0.5, "height": 2 },
            "minecraft:type_family": { "family": ["mob", "zombie", "monster"] },
            "minecraft:pushable": { "is_pushable": true, "is_pushable_by_piston": true },
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 2,
                "must_see": false,
                "must_see_forget_duration": 30,
                "within_radius": 30,
                "reselect_targets": true,
                "entity_types": [
                    {
                        "filters": {
                            "any_of": [
                                { "test": "is_family", "value": "player", "subject": "other" },
                                { "test": "is_family", "value": "villager", "subject": "other" },
                                { "test": "is_family", "value": "illager", "subject": "other" }
                            ]
                        },
                        "max_dist": 30
                    }
                ]
            },

            "minecraft:behavior.melee_attack": {
                "priority": 3,
                "melee_fov": 90,
                "track_target": true,
                "random_stop_interval": 0,
                "reach_multiplier": 0,
                "require_complete_path": false,
                "cooldown_time": 0
            },

            "minecraft:behavior.random_stroll": { "priority": 6 },
            "minecraft:behavior.random_look_around": { "priority": 7, "look_distance": 60 },

            "minecraft:navigation.walk": {
                "can_walk": true,
                "can_swim": true,
                "avoid_water": true,
                "can_path_over_water": true,
                "avoid_damage_blocks": true
            },

            "minecraft:target_nearby_sensor": {
                "must_see": false,
                "inside_range": 3,
                "outside_range": 6,
                "on_inside_range":  { "event": "udaw:start_fuse_event",  "target": "self" },
                "on_outside_range": { "event": "udaw:cancel_fuse_event", "target": "self" },
                "on_vision_lost_inside_range": { "event": "udaw:cancel_fuse_event", "target": "self" }
            }
        },

        "events": {
            "udaw:start_fuse_event": {
                "add": { "component_groups": ["udaw:start_fuse"] },
                "remove": { "component_groups": ["udaw:exploding"] }
            },

            "udaw:cancel_fuse_event": {
                "remove": { "component_groups": ["udaw:start_fuse", "udaw:exploding"] }
            },

            "udaw:explode": {
                "remove": { "component_groups": ["udaw:start_fuse"] },
                "add": { "component_groups": ["udaw:exploding"] }
            }
        }
    }
}
