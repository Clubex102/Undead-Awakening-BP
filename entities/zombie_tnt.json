{
    "format_version": "1.20.80",
    "minecraft:entity": {
        "description": {
            "animations": {},
            "scripts": {},
            "identifier": "udaw:zombietnt",
            "is_spawnable": true,
            "is_summonable": true,
            "spawn_category": "monster"
        },
        "component_groups": {
            "minecraft:timer_exploding": {
                "minecraft:timer": {
                    "time": 0.2,
                    "time_down_event": {
                        "event": "udaw:explode_now",
                        "target": "self"
                    }
                },
                "minecraft:is_baby": {}
            },
            "udaw:exploding": {
                "minecraft:explode": {
                    "fuse_length": 2,
                    "fuse_lit": true,
                    "power": 4,
                    "causes_fire": false,
                    "breaks_blocks": true
                }
            }
        },
        "components": {
            "minecraft:attack": {
                "damage": 0,
                "effect_name": "slowness",
                "effect_duration": 3
            },
            "minecraft:behavior.melee_attack": {
                "melee_fov": 90,
                "track_target": true,
                "random_stop_interval": 0,
                "reach_multiplier": 0,
                "attack_once": false,
                "require_complete_path": false,
                "cooldown_time": 0
            },
            "minecraft:interact": {
                "interactions": [
                    {}
                ]
            },
            "minecraft:health": {
                "value": 20,
                "max": 20
            },
            "minecraft:movement": {
                "value": 0.3
            },
            "minecraft:jump.static": {
                "jump_power": 0.42
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:behavior.random_stroll": {
                "priority": 6
            },
            
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 2,
                "must_see": false,
                "must_see_forget_duration": 30,
                "reselect_targets": true,
                "within_radius": 100,
                "entity_types": [
                    {
                        "filters": {
                            "any_of": [
                                {
                                    "test": "is_family",
                                    "value": "player",
                                    "subject": "other"
                                },
                                {
                                    "test": "is_family",
                                    "value": "villager",
                                    "subject": "other"
                                },
                                {
                                    "test": "is_family",
                                    "value": "illager",
                                    "subject": "other"
                                }
                            ]
                        },
                        "max_dist": 30
                    }
                ]
            },
            "minecraft:behavior.random_look_around": {
                "look_distance": 60
            },
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:collision_box": {
                "height": 2,
                "width": 0.5
            },
            
            
            "minecraft:type_family": {
                "family": ["mob", "zombie", "zombietnt", "monster"]
            },
            "minecraft:target_nearby_sensor": {
                "must_see": false,
                "inside_range": 3,
                "outside_range": 7,
                "on_inside_range": {
                    "event": "minecraft:start_exploding",
                    "target": "self"
                },
                "on_outside_range": {
                    "event": "minecraft:stop_exploding",
                    "target": "self"
                },
                "on_vision_lost_inside_range": {
                    "event": "minecraft:stop_exploding",
                    "target": "self"
                }
            },
            "minecraft:navigation.walk": {
                "avoid_damage_blocks": true,
                "avoid_portals": true,
                "avoid_sun": false,
                "avoid_water": true,
                "blocks_to_avoid": [],
                "can_breach": false,
                "can_break_doors": false,
                "can_jump": true,
                "can_open_doors": false,
                "can_open_iron_doors": false,
                "can_pass_doors": true,
                "can_path_from_air": false,
                "can_path_over_lava": false,
                "can_path_over_water": true,
                "can_sink": true,
                "can_swim": true,
                "can_walk": true,
                "can_walk_in_lava": false,
                "is_amphibious": false
            },
            "minecraft:movement.basic": {
                "max_turn": 30
            },
            "minecraft:loot": {
                "table": "loot_tables/entities/zombie_tnt.json"
            },
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? Math.Random(3,5) : 1"
            },
            "minecraft:can_join_raid": {}
        },
        "events": {
            "minecraft:start_exploding": {
                "add": 
                {
                    "component_groups": [
                        "minecraft:timer_exploding"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "udaw:exploding"
                    ]
                }
            },
            "udaw:explode_now": {
                "remove": {
                    "component_groups": [
                        "minecraft:timer_exploding"
                    ]
                },
                "add": {
                    "component_groups": [
                        "udaw:exploding"
                    ]
                }
            },
            "minecraft:stop_exploding": {
                "remove": {
                    "component_groups": [
                        "minecraft:timer_exploding",
                        "udaw:exploding"
                    ]
                }
            }
        }
    }
}
